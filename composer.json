{
    "name": "roots/bedrock",
    "type": "project",
    "license": "MIT",
    "description": "A modern WordPress stack",
    "homepage": "https://roots.io/bedrock/",
    "authors": [
        {
            "name": "Scott Walkinshaw",
            "email": "scott.walkinshaw@gmail.com",
            "homepage": "https://github.com/swalkinshaw"
        },
        {
            "name": "Ben Word",
            "email": "ben@benword.com",
            "homepage": "https://github.com/retlehs"
        }
    ],
    "keywords": [
        "bedrock",
        "roots",
        "wordpress",
        "stack",
        "composer",
        "vagrant",
        "wp"
    ],
    "support": {
        "issues": "https://github.com/roots/bedrock/issues",
        "forum": "https://discourse.roots.io/category/bedrock"
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://bitbucket.org/quai10/quai10-template.git"
        }
    ],
    "require": {
        "php": ">=5.4",
        "composer/installers": "~1.0.12",
        "vlucas/phpdotenv": "^2.0.1",
        "johnpbloch/wordpress": "4.3",
        "wpackagist-plugin/advanced-custom-fields": "~4.4.3",
        "quai10/quai10-template": "dev-develop",
        "wpackagist-plugin/wordpress-importer": "~0.6.1"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-install-cmd": [
            "cd web/app/themes/quai10-template/ && npm install",
            "cd web/app/themes/quai10-template/ && bower install",
            "cd web/app/themes/quai10-template/ && gulp"
        ],
        "post-update-cmd": [
            "cd web/app/themes/quai10-template/ && npm install",
            "cd web/app/themes/quai10-template/ && bower install",
            "cd web/app/themes/quai10-template/ && gulp"
        ]
    }
}
